<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button20"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-24dp"
        android:background="@drawable/timepicker"
        android:clipToOutline="true"
        android:padding="20dp"
        android:timePickerMode="spinner"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:contentDescription="Нажмите, если хотите вернуться на предыдущий экран"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:text="Настройка напоминаний"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button20"
        android:layout_width="387dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3E3E3E"
        android:text="Выберите время:"
        android:textAlignment="viewStart"
        android:textSize="18sp" />


    <Button
        android:id="@+id/button19"
        android:layout_width="387dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="402dp"
        android:backgroundTint="#333E3E3E"
        android:enabled="false"
        android:text="ПРОДОЛЖИТЬ"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

</RelativeLayout>